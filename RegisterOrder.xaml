        <ListView x:Name="lstProducts" HorizontalAlignment="Left" Height="77" Margin="65,205,0,0" VerticalAlignment="Top" Width="521"/>
        <Button x:Name="btnAddOrder" Content="Guardar
                " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="512,307,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="65,307,0,0" Text="Total:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtTotalCost" HorizontalAlignment="Left" Margin="114,307,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>
